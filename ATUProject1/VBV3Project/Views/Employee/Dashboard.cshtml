@model VBV3Project.ViewModels.EmployeeDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1>@ViewData["Title"]</h1>

<p>Welcome, @User.Identity.Name!</p>

<p>Your name is: @Model.CurrentEmployee.FirstName @Model.CurrentEmployee.LastName</p>

<p>Business owner: @Model.BusinessOwnerName</p>

<p>Business name: @Model.BusinessName</p>

<p>Number of employees: @Model.Employees.Count()</p>

@if (Model.Employees.Any())
{
    <h2>Employees:</h2>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Email</td>
                    <td>@employee.PhoneNumber</td>
                    <td><a asp-controller="Employee" asp-action="EditEmployee" asp-route-id="@employee.Id">Edit</a> | <a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees found.</p>
}

<p><a asp-controller="Employee" asp-action="CreateEmployee">Add Employee</a></p>
