@model VBV3Project.ViewModels.EmployeeListViewModel

<h1>Employees</h1>

<p>
    <a asp-action="CreateEmployee">Add Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>@employee.Email</td>
                <td>
                    <a asp-action="EditEmployee" asp-route-id="@employee.Id">Edit</a> |
                    <a asp-action="DeleteEmployee" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
