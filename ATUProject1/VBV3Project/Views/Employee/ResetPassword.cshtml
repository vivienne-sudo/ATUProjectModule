@model VBV3Project.ViewModels.ResetPasswordViewModel

<h1>Reset Password</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Employee" asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="EmployeeId" />

            <div class="form-group">
                <label asp-for="Password">New Password:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password:</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Reset Password</button>
            <a asp-controller="Employee" asp-action="Details" asp-route-id="@Model.EmployeeId">Cancel</a>
        </form>
    </div>
</div>
