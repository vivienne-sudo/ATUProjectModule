@model EditSalaryViewModel
@{
    ViewData["Title"] = "Edit Salary"; //for admin
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditSalary" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="YearlySalary"></label>
        <input asp-for="YearlySalary" class="form-control" />
        <span asp-validation-for="YearlySalary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployerPensionContributionPercentage"></label>
        <input asp-for="EmployerPensionContributionPercentage" class="form-control" />
        <span asp-validation-for="EmployerPensionContributionPercentage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AnnualLeaveDays"></label>
        <input asp-for="AnnualLeaveDays" class="form-control" />
        <span asp-validation-for="AnnualLeaveDays" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SickLeaveDays"></label>
        <input asp-for="SickLeaveDays" class="form-control" />
        <span asp-validation-for="SickLeaveDays" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="UserProfileId" />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
