@model UserProfile
@{
    ViewData["Title"] = "Contract";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        font-size: 14px;
    }

    .contract {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    .header {
        text-align: center;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 30px;
    }

    .section {
        margin-bottom: 20px;
    }

    .section-title {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 10px;
    }

    .variable {
        font-weight: bold;
    }

    .contract-details {
        border: 1px solid #ccc;
        padding: 15px;
    }

    .contract-details-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .contract-details-label {
        font-weight: bold;
    }
</style>

<div class="contract">
    <div class="header">Employment Contract</div>

    <div class="section">
        <div class="section-title">1. Employee Information</div>
        <p>
            <span class="variable">Name:</span> @Model.FirstName @Model.LastName<br>
            <span class="variable">Position:</span> @Model.Position<br>
            <span class="variable">Start Date:</span> @Model.StartDate.ToString("yyyy-MM-dd")
        </p>
    </div>

    <div class="section">
        <div class="section-title">2. Compensation</div>
        <div class="contract-details">
            <div class="contract-details-row">
                <span class="contract-details-label">Gross Yearly Salary:</span>
                <span class="variable">@Model.YearlySalary.ToString("C")</span>
            </div>
            <div class="contract-details-row">
                <span class="contract-details-label">Employer Pension Contribution:</span>
                <span class="variable">@($"{Model.EmployerPensionContributionPercentage:F2}%")</span>
            </div>
            <div class="contract-details-row">
                <span class="contract-details-label">Employee Pension Contribution:</span>
                <span class="variable">@($"{Model.EmployeePensionContributionPercentage:F2}%")</span>
            </div>
        </div>
    </div>

    <div class="section">
        <div class="section-title">3. Leave Days</div>
        <div class="contract-details">
            <div class="contract-details-row">
                <span class="contract-details-label">Annual Leave Days:</span>
                <span class="variable">@Model.AnnualLeaveDays</span>
            </div>
            <div class="contract-details-row">
                <span class="contract-details-label">Sick Leave Days:</span>
                <span class="variable">@Model.SickLeaveDays</span>
            </div>
        </div>
    </div>

    <div class="section">
        <div class="section-title">4. Employee Benefits</div>
        <p>
            The employee will be eligible for the following benefits:<br>
            - Health insurance<br>
            - Retirement plans<br>
            - Paid time off<br>
            - Bonus and incentive programs<br>
            - Employee discounts<br>
            - Training and development opportunities<br>
            - Other benefits as determined by the company
        </p>
    </div>

    <div class="section">
        <div class="section-title">5. Termination</div>
        <p>
            The employment may be terminated by either party with written notice. In case of termination, the employee will be entitled to receive any accrued but unused compensation and benefits.
        </p>
    </div>
</div>
