@model EmployeeManagementSystem.Models.LeaveRequest

@{
    ViewData["Title"] = "Submit Leave Request";
}

<h1>Submit Leave Request</h1>

<form asp-action="SubmitLeaveRequest">
    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DaysRequested">Days Requested</label>
        <input asp-for="DaysRequested" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>
