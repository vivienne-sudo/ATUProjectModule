@model IEnumerable<EmployeeManagementSystem.Models.Notification>

@{
    ViewData["Title"] = "Viewed Notifications";
}

<h1>Viewed Notifications</h1>

<table class="table">
    <thead>
        <tr>
            <th>Message</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var notification in Model)
        {
            <tr>
                <td>@notification.Message</td>
                <td>@notification.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@(notification.IsViewed ? "Viewed" : "Unviewed")</td>
            </tr>
        }
    </tbody>
</table>

